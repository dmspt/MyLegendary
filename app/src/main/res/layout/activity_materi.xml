<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgmaterii"
    android:padding="@dimen/dp16"
    tools:context=".MateriActivity">

    <ImageButton
        android:id="@+id/btnClose"
        android:layout_width="@dimen/dp40"
        android:layout_height="@dimen/dp40"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/dp8"
        android:background="@drawable/icbtnclose"
        android:layout_alignParentRight="true" />

    <ImageView
        android:id="@+id/mylegend"
        android:layout_width="@dimen/dp240"
        android:layout_height="@dimen/dp120"
        android:layout_below="@id/btnClose"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp40"
        android:background="@drawable/txtmylegend" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp16"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/btnSimple"
            android:layout_width="170dp"
            android:layout_height="@dimen/dp50"
            android:background="@drawable/icbtnsimplepast" />

        <ImageButton
            android:id="@+id/btnNarative"
            android:layout_width="170dp"
            android:layout_height="@dimen/dp50"
            android:layout_marginTop="@dimen/dp8"
            android:background="@drawable/icbtnnarativ" />

    </LinearLayout>

</RelativeLayout>